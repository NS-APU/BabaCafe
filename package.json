{
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@typescript-eslint/parser": "^5.45.1",
    "eslint": "^8.29.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint \"{server,web}/**/{src,apps,libs,test}/**/*.ts\" --fix",
    "all:install": "yarn install && yarn --cwd web/app install && yarn --cwd server/app install",
    "all:dev": "run-p dev:*",
    "dev:web": "yarn --cwd web/app dev",
    "dev:server": "yarn --cwd server/app start:dev"
  },
  "lint-staged": {
    "*.{js,ts,md,yml,html,json,css}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
